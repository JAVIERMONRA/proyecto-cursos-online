{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node", "jest"]
  },
  "include": [
    "controllers/**/*",
    "routes/**/*",
    "middlewares/**/*",
    "tests/**/*",
    "server.ts"
  ]
}